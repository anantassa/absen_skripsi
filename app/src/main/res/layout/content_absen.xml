<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tassa.absen_skripsi.AbsenActivity"
    tools:showIn="@layout/activity_proses_absen"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/absen_idj"
        android:visibility="gone"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semester" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semester"
        android:id="@+id/absen_sems"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prodi" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prodi"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/absen_prodi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Seksi" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kode Seksi"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/absen_kode_seksi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mata Kuliah" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mata Kuliah"
        android:textSize="16dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/absen_matkul" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dosen"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/absen_dosen" />


        <Spinner
        android:id="@+id/spinner_absen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_absen"
        android:layout_marginBottom="35dp" />

    <Button android:id="@+id/btn_absen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABSEN"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"/>
    </LinearLayout>

</RelativeLayout>
